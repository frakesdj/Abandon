<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id: "
                android:id="@+id/first"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/first"
                android:id="@+id/dashId"
                android:text="ID"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashMood"
                android:layout_below="@+id/first"
                android:textSize="24sp"
                android:text="Mood"
                android:layout_marginRight="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dashActiv"
                android:textSize="24sp"
                android:text="Activ"
                android:layout_toRightOf = "@+id/dashMood"
                android:layout_below="@id/first"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dashDate"
                    android:text="Activ"
                    android:layout_below="@id/dashMood"
                    android:layout_marginRight="6dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dashTime"
                    android:layout_below="@id/dashMood"
                    android:layout_toRightOf="@id/dashDate"
                    android:text="time"/>

            </RelativeLayout>



        </LinearLayout>


</LinearLayout>